@model IEnumerable<ApAssess2.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"> <i class="fas fa-plus"></i> &nbsp; Create New Product</a>
        </div>
    </div>

    <br>
    <br>

    @if (Model.Count() > 0) 
    {
        <table class="table table-bordered table-striped" style="width100%">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Name</td>
                        <td width="10%">@item.Price</td>
                        <td width="30%">@item.Category.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>  
                                <a asp-controller="Product" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>   
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product Exists</p>
    }
</div>